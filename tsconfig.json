{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "./src/**/*.js"
  ],
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ]
}